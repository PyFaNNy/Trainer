@model PatientViewModel
<div class="row my-2">
    <div class="col-lg-8 order-lg-2">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a href="" data-target="#profile" data-toggle="tab" class="nav-link active">Профиль</a>
            </li>
            <li class="nav-item">
                <a href="" data-target="#edit" data-toggle="tab" class="nav-link">Информация</a>
            </li>
        </ul>
        <div class="tab-content py-4">
            <div class="tab-pane active" id="profile">
                <h5 class="mb-3">@Model.LastName @Model.FirstName @Model.MiddleName, @Model.Age лет</h5>
                <div class="row">
                    <div class="col-md-6">
                        <h6>Обо мне</h6>
                        <p>
                            @if (Model.About != null)
                                @Model.About
                        </p>
                        <h6>Хобби</h6>
                        <p>
                            @if (Model.Hobbies != null)
                                @Model.Hobbies
                        </p>
                    </div>
                    <div class="col-md-12">
                        <h5 class="mt-2"><span class="fa fa-clock-o ion-clock float-right"></span>Недавние обследования</h5>
                        <table class="table table-sm table-hover table-striped">
                            <tbody>
                                @if (ViewBag.Results != null)
                                    @foreach (var active in ViewBag.Active)
                                    {
                                        <tr>
                                            <td>@active.Type</td>
                                            <td>@active.Date</td>
                                        </tr>
                                    }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="edit">
                <form method="post" asp-controller="Patient" asp-action="UpdateModel" asp-route-id="@Model.Id">
                    <div class="form-group row">
                        <label asp-for="LastName" class="col-lg-3 col-form-label form-control-label">Фамилия</label>
                        <div class="col-lg-9">
                            <input asp-for="LastName" class="form-control" type="text" value="@Model.LastName">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="FirstName" class="col-lg-3 col-form-label form-control-label">Имя</label>
                        <div class="col-lg-9">
                            <input asp-for="FirstName" class="form-control" type="text" value="@Model.FirstName">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="MiddleName" class="col-lg-3 col-form-label form-control-label">Отчество</label>
                        <div class="col-lg-9">
                            <input asp-for="MiddleName" class="form-control" type="text" value="@Model.MiddleName">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Age" class="col-lg-3 col-form-label form-control-label">Возраст</label>
                        <div class="col-lg-9">
                            <input asp-for="Age" class="form-control" value="@Model.Age">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="About" class="col-lg-3 col-form-label form-control-label">Обо мне</label>
                        <div class="col-lg-9">
                            <input asp-for="About" class="form-control" type="text" value="@Model.About">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Hobbies" class="col-lg-3 col-form-label form-control-label">Хобби</label>
                        <div class="col-lg-9">
                            <input asp-for="Hobbies" class="form-control" type="text" value="@Model.Hobbies">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label form-control-label"></label>
                        <div class="col-lg-9">
                            @if (User.IsInRole("admin"))
                            {
                                <button type="submit" class="btn btn-primary">Изменить</button>
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-4 order-lg-1 text-center">
        <img src="~/picture/icons/256x256/256_15.png" class="mx-auto img-fluid img-circle d-block" alt="avatar">
    </div>
</div>

