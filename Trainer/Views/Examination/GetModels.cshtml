@{
    ViewData["Title"] = "Обследования";
}
<h4>Обследования</h4>
<form id='examinations' method="post">
    @if (User.IsInRole("doctor"))
    {
        <button type="submit" class="btn btn-primary m-1" asp-controller="Examination" asp-action="DeleteModel">Удалить</button>
        <a class="btn btn-primary m-1" asp-controller="Examination" asp-action="ExportToPDF">Экспортировать в PDF</a>
    }
    @if (User.IsInRole("admin"))
    {
        <a class="btn btn-primary m-1" asp-controller="Examination" asp-action="ExportToCSV">Экспортировать в CSV</a>
    }

    <table class="table table-striped table-hover">
        <tr>
            <th><a asp-controller="Examination" asp-action="GetModels" asp-route-sortOrder="@ViewBag.TypeSort">Вид физической нагрузки</a></th>
            <th><a asp-controller="Examination" asp-action="GetModels" asp-route-sortOrder="@ViewBag.LastNameSort">Фамилия</a></th>
            <th><a asp-controller="Examination" asp-action="GetModels" asp-route-sortOrder="@ViewBag.FirstNameSort">Имя</a></th>
            <th><a asp-controller="Examination" asp-action="GetModels" asp-route-sortOrder="@ViewBag.MiddleNameSort">Отчество</a></th>
            <th><a asp-controller="Examination" asp-action="GetModels" asp-route-sortOrder="@ViewBag.DateSort">Дата обследования</a></th>
            @if (User.IsInRole("doctor"))
            {
                <th></th>
                <th><input type="checkbox" name="cb_all"></th>
            }
        </tr>

        @if (Model != null)
            @foreach (var examination in Model)
            {
                <tr>
                    <td>@examination.TypePhysicalActive</td>
                    <td>@examination.Patient.LastName</td>
                    <td>@examination.Patient.FirstName</td>
                    <td>@examination.Patient.MiddleName</td>
                    <td>@examination.Date.ToString("d")</td>
                    @if (User.IsInRole("doctor") && (int)examination.Status == 0)
                    {
                        <td>
                            <a class="btn btn-success" asp-controller="Examination" asp-action="GetModel" asp-route-id="@examination.Id"><i class="fas fa-check"></i></a>
                            <a class="btn btn-primary" asp-controller="Examination" asp-action="UpdateModel" asp-route-id="@examination.Id"><i class="fas fa-pen"></i></a>
                        </td>
                        <td><input type="checkbox" class="examination" name="selectedExamination" value="@examination.Id" /></td>
                    }
                    else if (User.IsInRole("doctor"))
                    {
                        <td></td>
                        <td><input type="checkbox" class="examination" name="selectedExamination" value="@examination.Id" /></td>
                    }
                </tr>
            }
    </table>
</form>

<script>
    var f = document.getElementById('examinations');
    f.cb_all.onchange = function (e) {
        var el = e.target || e.srcElement;
        var qwe = el.form.getElementsByClassName('examination');
        for (var i = 0; i < qwe.length; i++) {
            if (el.checked) {
                qwe[i].checked = true;
            } else {
                qwe[i].checked = false;
            }
        }
    }
</script>