@{
    ViewData["Title"] = "Назначить обследование";
}
@model ExaminationViewModel
<h2>Назначить обследование</h2>
<form method="post" enctype="multipart/form-data" asp-controller="Examination" asp-action="AddModel" asp-route-patientid="@ViewBag.UserId">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="TypePhysicalActive">Вид физической нагрузки</label><br />
            <select asp-for="TypePhysicalActive" class="form-control">
                <option>Выберите вид нагрузки</option>
                <option value="0">Бег</option>
                <option value="1">Хотьба</option>
                <option value="2">Велосипед</option>
                <option value="3">Плавание</option>
                <option value="4">Силовые упражнения</option>
            </select>
        </div>
        <div class="form-group">
            <label>Датчики</label><br />
            <div class="form-check">
                <input type="checkbox" asp-for="Indicator1" class="form-check-input" />
                <label class="form-check-label">Измерения кровяного давления</label>
            </div>
            <div class="form-check">
                <input type="checkbox" asp-for="Indicator2" class="form-check-input" />
                <label class="form-check-label">Измерения температуры кожи</label>
            </div>
            <div class="form-check">
                <input type="checkbox" asp-for="Indicator3" class="form-check-input" />
                <label class="form-check-label">Измерения влажности кожи</label>
            </div>
            <div class="form-check">
                <input type="checkbox" asp-for="Indicator4" class="form-check-input" />
                <label class="form-check-label">Измерения электрической проводимости кожи</label>
            </div>
            @*<div class="form-check">
                <input type="checkbox" asp-for="Indicator5" class="form-check-input" />
                <label class="form-check-label">Измерения частоты пульса сердечного ритма</label>
            </div>*@
        </div>
        <div>
            <button type="submit" class="btn btn-primary mt-1">Назначить</button>
        </div>
    </div>
</form>